#:kivy 1.0.9

<PongBall>:
    size: 50, 50 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size          

<PongPaddle>:
    size:100,300
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size

<PongPaddles>:
    size:533,100
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size
           

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right
    player3:player_up
    player4:player_down
    
    canvas:
        Color:
            rgba:0,1,0,1
        Rectangle:
            pos: self.center_x-5, 0
            size: 10, self.height
    
    Label:
        font_size: 35 
        center_x: root.width / 6
        top: root.top - root.height/2
        text: str(root.player1.score)
        
    Label:
        font_size:35 
        center_x: root.width * 5/6
        top: root.top - root.height/2
        text: str(root.player2.score)

    Label:
        font_size:35
        right:root.right/2
        center_y:root.top/6
        text:str(root.player3.score)

    Label:
        font_size:35
        right:root.right/2
        center_y:root.top-(root.top*1/6)
        text:str(root.player4.score)
    
    PongBall:
        id: pong_ball
        center: self.parent.center
        
    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y
        
    PongPaddle:
        id: player_right
        x: root.width-self.width
        center_y: root.center_y

    PongPaddles:
        id:player_up
        x:root.center_x
        y:root.y-10

    PongPaddles:
        id:player_down
        x:root.center_x
        y:root.height-self.height+10